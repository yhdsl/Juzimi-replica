(function(a){a.fn.wordLimit=function(b){this.each(function(){if(!b){var d=a(this.cloneNode(true)).hide().css({position:"absolute",width:"auto",overflow:"visible"});a(this).after(d);if(d.width()>a(this).width()){a(this).text(a(this).text().substring(0,a(this).text().length-4));a(this).html(a(this).html()+"...");d.remove();a(this).wordLimit()}else{d.remove();return}}else{var c=b;if(a(this).text().length>c){a(this).text(a(this).text().substring(0,c));a(this).html(a(this).html()+"\u3002\u3002\u3002")}}})}})(jQuery);
